.resources-search{
  display: flex;
  align-items: center;
  padding: 0 15px;
  background: #fff;
}
van-search{
  flex: 1;
}
.resources-btu{
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #E3211F;
  font-size: 15px;
  margin-left: 20px;
}


.resources-list{
  margin-top: 10px;
}
.resources-item{
  background: #FFFFFF;
  margin-bottom: 10px;
  padding: 17px 19px 19px;
  border-radius: 10px;
}
.resources-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 11.5px;
  border-bottom: 1px solid #EEEEEE;
}
.resources-icon{
  margin-right: 15px;
}
.resources-icon image{
  width: 15px;
  height: 14px;
}
.resources-title{
  flex: 1;
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  color: #191919;
  font-size: 17px;
}
.resources-title text:first-child{
  margin-right: 10px;
}
.resources-active{
  width: 70px;
}
.resources-bottom{
  margin-top: 16.5px;
}

