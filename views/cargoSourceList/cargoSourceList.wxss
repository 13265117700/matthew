.resources-search{
  display: flex;
  align-items: center;
  padding: 0 15px;
  background: #fff;
}
van-search{
  flex: 1;
}
.resources-btu{
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #E3211F;
  font-size: 15px;
  margin-left: 20px;
}


.resources-list{
  margin-top: 10px;
}
.resources-item{
  background: #FFFFFF;
  margin-bottom: 10px;
  padding: 17px 19px 19px;
  border-radius: 10px;
}
.resources-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 11.5px;
  border-bottom: 1px solid #EEEEEE;
}
.resources-icon{
  margin-right: 15px;
}
.resources-icon image{
  width: 15px;
  height: 14px;
}
.resources-title{
  flex: 1;
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  color: #191919;
  font-size: 17px;
}
.resources-title text:first-child{
  margin-right: 10px;
}
.resources-active{
  width: 70px;
}
.resources-bottom{
  margin-top: 16.5px;
}


/* 货源 */
.cargo-container{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.cargo-item{
  display: flex;
  align-items: center;
}
.cargo-icon{
  color: #FFFFFF;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  font-size: 10px;
  width: 12px;
  height: 12px;
  text-align: center;
  line-height: 12px;
  margin-right: 5px;
}
.cargo-subTitle{
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  font-size: 12px;
  color: #191919;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100px;
}
.cargo-img{

}
.cargo-img image{
  width: 55px;
  height: 7.5px;
}
.cargo-icon.start{
  background: #E3211F;
}
.cargo-icon.end{
  background: #369D40;
}



