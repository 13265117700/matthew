<view class="page-container">
    <view class="top-up">
        <view class="top-up_title">
            <text>充值金额</text>
        </view>
        <view class="top-up_input">
            <view class="icon">
                <text>￥</text>
            </view>
            <input type="text" placeholder="请输入充值金额" placeholder-class="input-placeholder" bindinput="handleInput" />
        </view>
    </view>
    <view class="wrap">
        <view class="subtitle">
            <text>充值金额</text>
        </view>
        <view class="amount">
            <text>￥{{value}}</text>
        </view>
        <view class="btn">
            <van-button custom-style="{{btnStyle}}">充值</van-button>
        </view>
    </view>
</view>