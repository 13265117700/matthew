.page-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    background: #fff;
}

.top-up {
    flex: 1;
    padding: 25px;
}

.top-up_title {
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #191919;
    font-size: 14px;
    margin-bottom: 26.5px;
}

.top-up_input {
    display: flex;
    font-size: 34px;
    border-bottom: 0.5px solid #EEEEEE;
}

.top-up_input input {
    height: 45px;
    line-height: 45px;
}

.input-placeholder {
    color: #999999;
    font-size: 18px;
}

.icon {}

.wrap {
    display: flex;
    align-items: center;
    padding: 7.5px 25px;
    border-top: 1px solid #E5E5E5;
    box-shadow: 0px 8px 10px;
}

.wrap .subtitle {
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #191919;
    font-size: 15px;
    margin-right: 11px;
}

.wrap .amount {
    flex: 1;
    color: #F0222F;
    font-size: 22px;
    font-family: PingFang-SC-Heavy;
    font-weight: Heavy;
}

.wrap .btn {}