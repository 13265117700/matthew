.page-container{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.page-mian{
    flex: 1;
}

.user-search{
    display: flex;
    align-items: center;
    /* padding: 0 15px; */
    background: #fff;
}
.user-search.friend-search{
    margin-top: 15px;
}
van-search{
    flex: 1;
}
.user-search_btu{
    height: 54px;
    display: flex;
    align-items: center;
    margin-right: 15px;
}
.user-search_btu image{
    width: 24px;
    height: 20px;
}
.user-list{
    flex: 1;
    margin-top: 10px;
}
.user-item{
    display: flex;
    align-items: center;
    padding: 11.5px 15px;
    border-bottom: 1px solid #E5E5E5;
    background: #fff;
}
.user-item:last-child{
    border: none;
}
.user-avatar{
    margin-right: 10px;
}
.user-info{
    flex: 1;
    display: flex;
}
.user-info_or{
    flex: 1;
}
.user-name{
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #191919;
    font-size: 16px;
    margin-bottom: 9px;
}
.user-msg{
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #B3B3B3;
    font-size: 13px;
}

.user-friend .user-item{
    padding: 5px 15px 0;
    border: none;
}
.user-friend .user-item:first-child{
    margin-bottom: 10px;
}
.user-friend .user-item:first-child .user-name{
    border: none;
}

.user-friend .user-item .user-name{
    margin: 0;
    height: 54px;
    line-height: 54px;
    flex: 1;
    border-bottom: 1px solid #E5E5E5;
    /* padding-bottom: 10px; */
}
.user-friend .user-item:last-child .user-name{
    border: none;
}
.friend-btu{
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #2274F0;
    font-size: 15px;
}

.divider{
    width: 160px;
    margin: 0 auto;
}

.close-btu{
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #191919;
    font-size: 18px;
    /* margin-left: 20px; */
}

.friend-list{
    padding: 30px 25px 0 15px;
    height: 100%;
    position: relative;
}
.friend-item{
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    padding-bottom: 11px;
    border-bottom: 1px solid #E5E5E5;
}
.friend-name{
    flex: 1;
    margin-left: 10px;
}
.friend-validation{
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
}
.friend-validation_button{
    text-align: center;
    padding-top: 10px;
}