<view class="page-container">
    <view class="page-navbar">
        <vtu-navbar 
            title="消息中心" 
            homeStyle="cachet" 
            bgColor="#F0222FFF" 
            fontColor="#ffffff" 
            icon="iconfont icon-shangchuan"></vtu-navbar>
    </view>
    <view class="page-mian">
        <view class="user-container">
            <view class="user-chat" wx:if="{{ activeIndex === 0 }}">
                <view class="user-search">
                    <van-search
                        value="{{ value }}"
                        input-align="center"
                        placeholder="搜索用户名/手机号"
                        />
                </view>
                <view class="user-list">
                    <view class="user-item" bindtap="gotoChat">
                        <view class="user-avatar">
                            <vtu-avatar src="/images/my/cdbzj@3x.png" circle></vtu-avatar>
                        </view>
                        <view class="user-info">
                            <view class="user-info_or">
                                <view class="user-name">麦兜小姐</view>
                                <view class="user-msg">您好，请问15号还有空船运货吗</view>
                            </view>
                            <view class="user-info_so">刚刚</view>
                        </view>
                    </view>
                    <view class="user-item">
                        <view class="user-avatar">
                            <vtu-avatar src="/images/my/cdbzj@3x.png" circle></vtu-avatar>
                        </view>
                        <view class="user-info">
                            <view class="user-info_or">
                                <view class="user-name">麦兜小姐</view>
                                <view class="user-msg">您好，请问15号还有空船运货吗</view>
                            </view>
                            <view class="user-info_so">刚刚</view>
                        </view>
                    </view>
                    <view class="user-item">
                        <view class="user-avatar">
                            <vtu-avatar src="/images/my/cdbzj@3x.png" circle></vtu-avatar>
                        </view>
                        <view class="user-info">
                            <view class="user-info_or">
                                <view class="user-name">麦兜小姐</view>
                                <view class="user-msg">您好，请问15号还有空船运货吗</view>
                            </view>
                            <view class="user-info_so">刚刚</view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="user-friend" wx:if="{{ activeIndex === 1 }}">
                <view class="user-search">
                    <van-search value="{{ value }}" input-align="center" placeholder="搜索用户名/手机号" />
                    <view class="user-add" bindtap="showSearchFriends">
                        <image src="/images/my/MyFriend/tjhy@3x.png"></image>
                    </view>
                </view>
                <view class="user-list">
                    <view class="user-item">
                        <view class="user-avatar">
                            <van-image round width="40px" height="40px" src="/images/my/MyFriend/add.png" />
                        </view>
                        <view class="user-name">新的好友</view>
                    </view>
                    <view class="user-item">
                        <view class="user-avatar">
                            <van-image round width="40px" height="40px" src="/images/my/cdbzj@3x.png" />
                        </view>
                        <view class="user-name">麦兜小姐</view>
                    </view>
                    <view class="user-item">
                        <view class="user-avatar">
                            <van-image round width="40px" height="40px" src="/images/my/cdbzj@3x.png" />
                        </view>
                        <view class="user-name">麦兜小姐</view>
                    </view>
                    <view class="user-item">
                        <view class="user-avatar">
                            <van-image round width="40px" height="40px" src="/images/my/cdbzj@3x.png" />
                        </view>
                        <view class="user-name">麦兜小姐</view>
                    </view>
                </view>
                <view class="divider">
                    <van-divider contentPosition="center">3个好友</van-divider>
                </view>
            </view>
        </view>
        <van-popup 
            show="{{ show }}"
            custom-style="height: 100%;width: 100%;padding-top:60px;border-radius: 0;"
            round
            position="right">
            <view class="user-search">
                <van-search value="{{ value }}" input-align="center" placeholder="搜索手机号" />
                <view class="close-btu" bindtap="onCloseAddress">
                    <text>取消</text>
                </view>
            </view>
        </van-popup>
    </view>
    <view class="page-tabbar">
        <van-tabbar active="{{ activeIndex }}" bind:change="handleClickTabbar">
            <van-tabbar-item wx:for="{{ tabBar }}" wx:key="index" wx:for-item="tabbarItem">
                <image slot="icon" src="{{ tabbarItem.icon.normal }}" mode="aspectFit"  style="{{tabbarStyle}}" />
                <image slot="icon-active" src="{{ tabbarItem.icon.active }}" mode="aspectFit" style="{{tabbarStyle}}"/>
                <text>{{ tabbarItem.name }}</text>
            </van-tabbar-item>
        </van-tabbar>
    </view>
</view>
