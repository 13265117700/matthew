.detail-section {
    background: #fff;
    margin-top: 10px;
    border-radius: 10px;
    padding-bottom: 26px;
}

.primary {
    text-align: center;
    padding: 30px 0;
    border-bottom: 0.5px solid #E5E5E5;
    margin: 0 15px;
}

.suntitle {
    font-size: 18px;
    margin-bottom: 14px;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: #191919;
}

.amount {
    font-size: 30px;
    margin-bottom: 15px;
}

.status {
    margin-bottom: 15px;
}

.status image {
    height: 60px;
    width: 60px;
}

.describe {
    color: #999999;
    font-size: 13px;
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
}

.secondary {
    padding: 25px 16px 0;
}

.secondary-item {
    display: flex;
    justify-content: space-between;
    font-size: 15px;
    margin-bottom: 20px;
}
.secondary-item:last-child{
    margin: 0;
}

.secondary-item .subtitle {
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #999999;
}

.secondary-item .text {
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: #191919;
}



.btn-section {
    width: 300px;
    margin: 15% auto;
    height: 50px;
}

.btn-class {
    height: 100%;
    line-height: 25px !important;
    font-family: PingFang-SC-Bold;
    font-weight: bold !important;
    font-size: 18px !important;
}