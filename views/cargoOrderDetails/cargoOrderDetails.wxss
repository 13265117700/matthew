.banner {
  background: linear-gradient(90deg, #E01923, #F45919);
  padding: 35px 25px 23px 15px;
  border-bottom-left-radius: 5%;
  border-bottom-right-radius: 5%;
}

.banner-span {
  /* width: 30px; */
  position: relative;
  text-align: center;
  top: 15%;
  height: 30px;
  line-height: 30px;
  margin-bottom: 50px;
  display: flex;
}

.banner-span_status {
  flex: 1;
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  font-size: 18px;
  color: #fff;
}

.banner-span_icon {
  font-family: "vtu-icon" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: #fff;
}

.banner-span_icon::before {
  content: "\e6cb";
}

.banner-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.banner-left {}

.banner-title {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #fff;
  font-size: 22px;
}

.banner-describe {
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  color: #FF9693;
  font-size: 14px;
}

.banner-right {}

.banner-right image {
  width: 116px;
  height: 81px;
}

.order-wrap {}

.order-item {
  display: flex;
  align-items: center;
  padding: 2% 0;
  /* padding: 2% 3%; */
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  color: #191919;
  font-size: 14px;
}

.order-top-hd {
  display: flex;
  align-items: center;
}

.order-top-hd text {
  width: 100px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.order-top-hd .icon {
  margin-right: 10px;
}

.order-top-hd .icon image {
  width: 15px;
  height: 15px;
}



.order-top-bd {
  margin: 0 3%;
}

.order-top-bd image {
  width: 55px;
  height: 7.5px;
}


.order-top-ft {
  width: 100px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.order-cargo-name {
  font-size: 12px;
  width: 45px;
  height: 20px;
  line-height: 20px;
  background: #F06622;
  text-align: center;
  color: #fff;
  border-radius: 10px;
  margin-right: 3%;
}

.order-cargo-number {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #1F84E3;
  font-size: 14px;
}

.order-start-time {
  font-size: 12px;
  color: #1F84E3;
}

.order-number {
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  color: #666666;
  font-size: 12px;
}



.order-group {
  padding: 5% 3% 2%;
  margin-top: 3%;
  background: #fff;
}

.info-item {
  margin-bottom: 19px;
  display: flex;
  align-items: center;
  min-width: 130px;
}

.info-item:last-child {
  margin: 0;
}

.info-subtitle {
  color: #333333;
  font-family: PingFang-SC-Regular;
  font-weight: Regular;
  font-size: 14px;
}

.info-text {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #191919;
  font-size: 14px;
  flex: 1;
}
.order-group.active .info-item:nth-child(12){
  height: 30px;
  align-items: normal;
}
.order-group.active .info-item:nth-child(12) .info-text{
  border-bottom: 1px solid #EEEEEE;
}
.order-btu{
  text-align: right;
}
van-button{
  margin-left: 5px;
}



