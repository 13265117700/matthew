.banner-container {
    background: linear-gradient(90deg, #E01923, #F45919);
    height: 170px;
    position: relative;
}

.banner-span {
    text-align: center;
    line-height: 30px;
    display: flex;
    padding: 25px 10px 0;
}

.banner-span_status {
    flex: 1;
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    font-size: 18px;
    color: #fff;
}

.banner-span_icon {
    font-family: "vtu-icon" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color: #fff;
}

.banner-span_icon::before {
    content: "\e6cb";
}




.user-wrap {
    width: 85%;
    height: 96px;
    border-radius: 10px;
    background: #fff;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -40px;
}

.user-avatar {
    position: absolute;
    top: -20px;
    left: 20px;
}

.user-avatar image {
    width: 100px;
    height: 100px;
    border-radius: 5px;
}

.user-info {
    position: absolute;
    left: 136.5px;
    top: 27px;
}

.user-block {
    display: flex;
    align-items: center;
    margin-bottom: 7px;
}

.user-name {
    font-family: PingFang-SC-Heavy;
    font-weight: Heavy;
    color: #434343;
    font-size: 15px;
    margin-right: 10px;
}

.user-status {
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #00C80E;
    font-size: 10px;
}

.user-record {
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: #878787;
    font-size: 12px;
}