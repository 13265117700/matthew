<view class="page-container">
    <view class="navbar">
        <vtu-navbar title="{{navbarTitle}}" homeStyle="cachet" bgColor="#F0222FFF" fontColor="#ffffff" icon="iconfont icon-shangchuan"></vtu-navbar>
    </view>
    <view class="page-main">
        <view class="release-section">
            <vtu-input-group>
                <view class="release-item">
                    <view class="release-subTitle">
                        <text>选择船舶</text>
                    </view>
                    <view class="release-input">
                        <vtu-input 
                            type="default" 
                            value="请选择船舶"
                            text-align="left"
                            arrow
                            bind:click="handShipChooseShow"></vtu-input>
                    </view>
                    <van-popup
                        show="{{ shipChooseShow }}"
                        round
                        position="bottom"
                        custom-style="height: 45%"
                        bind:close="onClose">
                        <!-- <view class="popup-subTitle">请选择船舶</view> -->
                        <van-picker
                            title="标题"
                            show-toolbar
                            default-index="2"
                            confirm-button-text=""
                            cancel-button-text=""
                            visible-item-count="5"
                            columns="{{ shipChooseList }}" 
                            bind:change="onShipChoose" />
                        <vtu-btn type="danger">确认</vtu-btn>
                    </van-popup>
                </view>
                <view class="release-item">
                    <view class="release-subTitle">
                        <text>空船港</text>
                    </view>
                    <view class="release-input">
                        <vtu-input 
                            type="default" 
                            value="请选择空船港"
                            text-align="left"
                            arrow
                            bind:click="handAirportShow"></vtu-input>
                    </view>
                    <van-popup
                        show="{{ portChooseShow }}"
                        position="right"
                        custom-style="height: 100%;width: 100%;"
                        bind:before-enter="portList">
                        <view class="popup-content">
                            <view class="popup-title"><text>请选择地区</text><van-icon name="close" bind:click="onClose" /></view>
                            <!-- <van-tabs active="{{ popupactive }}" tab-class="popup-tabs" bind:change="handPopupPitch">
                                <van-tab title="标签 1">内容 1</van-tab>
                                <van-tab title="标签 2">内容 2</van-tab>
                                <van-tab title="标签 3">内容 3</van-tab>
                                <van-tab title="标签 4">内容 4</van-tab>
                            </van-tabs> -->
                            <view class="popup-crumbs">
                                <view class="popup-crumbs-item active">广东</view>
                                <view class="popup-crumbs-item">请选择</view>
                            </view>
                            <view class="popup-list">
                                <view class="popup-item" 
                                    wx:for="{{ popupList }}" 
                                    wx:key="index" 
                                    bindtap="portChoose"
                                    data-index="{{index}}"
                                    id="{{item.id}}">
                                    <view class="popup-item_icon">
                                        <image src="/images/deliver/xz@3x.png"></image>
                                    </view>
                                    <text>{{item.name}}</text>
                                </view>
                            </view>
                        </view>
                    </van-popup>
                </view>
                <view class="release-item">
                    <view class="release-subTitle">
                        <text>空船期</text>
                    </view>
                    <view class="release-input">
                        <vtu-input 
                            placeholder="如2020-08-12 ±1天" 
                            value="{{pickerDate}}"
                            type="picker" 
                            mode="date"
                            text-align="left"
                            arrow
                            bindchange="pickerDateChange"></vtu-input>
                    </view>
                </view>
            </vtu-input-group>
        </view>
        <view class="remarks-section">
            <vtu-input-group>
                <vtu-input 
                    title="备注" 
                    placeholder="请输入想对货主说的内容" 
                    type="textarea" 
                    text-align="left" 
                    text-height="100px" 
                    show-max-label="{{false}}"></vtu-input>
            </vtu-input-group>
        </view>
        <view class="submit-section">
            <vtu-btn type="danger">发布船期</vtu-btn>
        </view>
    </view>
</view>
