page{
    height: 100%;
}
.page-container{
    height: 100%;
    display: flex;
    flex-direction: column;
}

.page-main{
    flex: 1;
    padding: 10px;
    display: flex;
    flex-direction: column;
}
.remarks-section{
    flex: 1;
}
.release-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    line-height: 60px;
    border-bottom: 1px solid #E5E5E5FF;
    margin-left: 15px;
}
.release-item:last-child{
    border: none;
}
.release-input{
    flex: 1;
}

.Vtuzx_Input_Group_Center {
    border-radius: 10px;
}
van-popup{
    display: flex;
    flex-direction: column;
}

.release-item .van-popup{
    display: flex;
    flex-direction: column;
}
.release-item van-picker{
    flex: 1;
}
.release-item vtu-btn{
    margin: 10px;
}