page{
    height: 100%;
}
.page-container{
    height: 100%;
    display: flex;
    flex-direction: column;
}

.page-main{
    flex: 1;
    padding: 10px;
    display: flex;
    flex-direction: column;
}
.remarks-section{
    flex: 1;
}
.release-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    line-height: 60px;
    border-bottom: 1px solid #E5E5E5FF;
    margin-left: 15px;
}
.release-item:last-child{
    border: none;
}
.release-input{
    flex: 1;
}

.Vtuzx_Input_Group_Center {
    border-radius: 10px;
}
van-popup{
    display: flex;
    flex-direction: column;
}


van-popup .popup-content{
    padding: 65px 20px 0;
}
.popup-content .popup-title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: PingFang-SC-Bold;
    font-weight: Bold;
    color: #191919FF;
    font-size: 16px;
}

.popup-tabs{
    /* justify-content: left !important; */
    flex: none !important;
    -webkit-flex: none !important;
    padding-right: 35px !important;
}

.popup-content .popup-crumbs{
    display: flex;
    padding: 0 10px;
    font-family: PingFang-SC-Bold;
    font-weight: Bold;
    color: #191919FF;
    font-size: 14px;
}
.popup-content .popup-crumbs .popup-crumbs-item{
    margin-right: 35px;
    position: relative;
}
.popup-content .popup-crumbs .popup-crumbs-item.active::after{
    content: '';
    width: 23px;
    height: 2px;
    background: #E3211FFF;
    position: absolute;
    left: 50%;
    bottom: 20%;
    transform: translateX(-50%);
}
.popup-content .popup-list .popup-item{
    display: flex;
    align-items: center;
}
.popup-content .popup-list{
    padding: 0 10px;
    line-height: 40px;
}
.popup-content .popup-list .popup-item image{
    width: 12px;
    height: 12px;
}
.popup-content .popup-list .popup-item .popup-item_icon{
    margin-right: 10px;
}

.release-item .van-popup{
    display: flex;
    flex-direction: column;
}
.release-item van-picker{
    flex: 1;
}
.release-item .van-picker .van-picker {
    height: 100%;
}
.release-item vtu-btn{
    margin: 10px;
}