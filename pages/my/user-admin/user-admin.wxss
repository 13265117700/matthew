/* pages/my/userAdmin/userAdmin.wxss */

.page-container{
    height: 100vh;
    display: flex;
    flex-direction: column;
}
.page-main{
    flex: 1;
    display: flex;
    flex-direction: column;
}
van-tabs{
    flex: 1;
}
.addButton{
    height: 50px;
    line-height: 50px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    background: #E3211FFF;
    color: #FFFFFFFF;
    font-family: PingFang-SC-Bold;
    font-weight: Bold;
    font-size: 16px;
    text-align: center;
    position: relative;
}
.addButton-Semicircle{
    width: 60px;
    height: 30px;
    background: #E3211FFF;
    border-radius: 100px 100px 0 0;
    position: absolute;
    top: -30px;
    left: 50%;
    transform: translateX(-50%);
}
.addButton-Semicircle::after{
    content: '';
    height: 17px;
    width: 3px;
    background: #FFFFFFFF;
    position: absolute;
    top:20px;
    left: 50%;
    transform: translateX(-50%);
}
.addButton-Semicircle::before{
    content: '';
    width: 17px;
    height: 3px;
    background: #FFFFFFFF;
    position: absolute;
    top: 27px;
    left: 50%;
    transform: translateX(-50%);
}


.see-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    line-height: 60px;
    padding: 0 20px;
    margin-top: 10px;
    background: #ffffff;
    border-radius: 10px;
    position: relative;
}
.see-item_title{
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: #191919FF;
    font-size: 16px;
}

.see-item_status{
    flex: 1;
    text-align: right;
    padding: 0 10px;
}

.see-item_status{
    color: #E3211FFF;
}
.see-item_status.active{
    color: chartreuse;
}
.see-item_tag image{
    width: 6px;
    height: 10px;
}
.see-item_hide{
    position: absolute;
    width: 100%;
    height: 60px;
    left: 0;
}